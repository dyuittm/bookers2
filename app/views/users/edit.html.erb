<h3>User info</h3>
<%= form_with model: @user do |f| %>
  <p>Name</p>
    <%= f.text_field :name %>
  <p>Image</p>
    <%= f.file_field :profile_image, placeholder: "profile_image", accept: "image/*" %>
  <p>Introduction</p>
    <%= f.text_area :introduction %>
  <%= f.submit'Update user' %>
<% end %>