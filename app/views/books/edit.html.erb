<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
        <%= form_with model: @book, url: book_path(@book),method: :patch  do |f| %>
          <div class="input-group mb-3 mt4">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"></span>
            </div>
              <%= f.text_field :title, class: "form_control", placeholder: "Title" %>
              <%= f.text_area :body, class: "form_control", placeholder: "Opinion" %>
            </div>
              <%= f.submit'Update book', class: "btn btn-success" %>
            </div>
          </div>
        <% end %>
      </div>
      <%= link_to "Show", book_path(@book) %>
      <%= "|" %>
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>
