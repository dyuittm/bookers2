<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'sideform', book: @book, user: @user %>
    </div>
    <div class="col-md-8">
      <h4>Books</h4>
      <table>
        <thead>
          <tr>
            <th colspan=1></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= image_tag book.user.get_profile_image(100,100) %></td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @books %>
    </div>
  </div>
</div>
